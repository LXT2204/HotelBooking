@model HotelBooking.Models.Room

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
    ViewBag.Title = "Thêm một phòng mới";
}

<h1>Thêm phòng</h1>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            </header>
            <div class="panel-body">
                <div class="position-center">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="room_name" class="control-label">Tên phòng</label>
                            <input asp-for="room_name" class="form-control" />
                            <span asp-validation-for="room_name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="room_price" class="control-label">Giá phòng</label>
                            <input type="text" asp-for="room_price" class="form-control" />
                            <span asp-validation-for="room_price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="roomImage" class="control-label">Hình ảnh</label>
                            <input id="roomImage" name="roomImage" type="file" class="form-control" accept="image/*" />
                        </div>
                        <div class="form-group">
                            <label asp-for="room_desc" class="control-label">Mô tả</label>
                            <textarea style="resize: none" rows="8" class="form-control" asp-for="room_desc"></textarea>
                            <span asp-validation-for="room_desc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="room_content" class="control-label">Tiện ích</label>
                            <textarea style="resize: none" rows="8" class="form-control" asp-for="room_content"></textarea>
                            <span asp-validation-for="room_content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="categoryName" class="control-label">Loại phòng</label>
                            <select name="categoryName" class="form-control" asp-items="ViewBag.category_name"></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="room_status">Trạng thái</label>
                            <select asp-for="room_status" class="form-control input-sm m-bot15">
                                <option value="0">Hiển thị</option>
                                <option value="1">Ẩn</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </section>

    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>
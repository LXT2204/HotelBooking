@model HotelBooking.Models.Room

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
    ViewBag.Title = "Thông tin chi tiết phòng";
}

<h1>Thông tin chi tiết</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Tên phòng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.room_name)
        </dd>
        <dt class="col-sm-2">
            Loại phòng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.category.category_name)
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.room_desc)
        </dd>
        <dt class="col-sm-2">
            Tiện ích
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.room_content)
        </dd>
        <dt class="col-sm-2">
            Giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.room_price)
        </dd>
        <dt class="col-sm-2">
            Hình ảnh
        </dt>
        <dd class="col-sm-10">
            <img src="~/public/uploads/room/@Model.room_image" height="100" width="100" />
        </dd>
        <dt class="col-sm-2">
            Tình trạng
        </dt>
        @if (Model.room_status == 0)
        {
            <dd class="col-sm-10">
                Ẩn
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Hiện
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.room_id">Chỉnh sửa</a> |
    <a asp-action="Index">Quay lại</a>
</div>
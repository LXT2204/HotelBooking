@model HotelBooking.Models.Room

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
    ViewBag.Title = "Chỉnh sửa thông tin phòng";
}

<h1>Chỉnh sửa thông tin phòng</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="room_id" />
            <div class="form-group">
                <label asp-for="room_name" class="control-label">Tên phòng</label>
                <input asp-for="room_name" class="form-control" />
                <span asp-validation-for="room_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="categoryName" class="control-label">Loại phòng</label>
                <select name="categoryName" class="form-control" asp-items="ViewBag.category_name"></select>
            </div>
            <div class="form-group">
                <label asp-for="room_desc" class="control-label">Mô tả phòng</label>
                <textarea style="resize: none" rows="8" asp-for="room_desc" class="form-control"></textarea>
                <span asp-validation-for="room_desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="room_content" class="control-label">Tiện ích</label>
                <textarea style="resize: none" rows="8" asp-for="room_content" class="form-control"></textarea>
                <span asp-validation-for="room_content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="room_price" class="control-label">Giá phòng</label>
                <input asp-for="room_price" class="form-control" />
                <span asp-validation-for="room_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="roomImage" class="control-label">Hình ảnh</label>
                <input name="roomImage" type="file" class="form-control" accept="image/*" />
                <img src="~/public/uploads/room/@Model.room_image" height="100" width="100">
            </div>
            <div class="form-group">
                <label asp-for="room_status">Trạng thái</label>
                <select asp-for="room_status" class="form-control input-sm m-bot15">
                    <option value="1">Hiển thị</option>
                    <option value="0">Ẩn</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>
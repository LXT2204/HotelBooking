@model HotelBooking.Models.CategoryRoom

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
    ViewBag.Title = "Xóa loại phòng";
}

<h3>Bạn chắc chắn muốn xóa?</h3>
<div>
    <form asp-action="Delete">
        <dl class="row">
            <dt class = "col-sm-2">
               Tên loại phòng
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.category_name)
            </dd>
            <dt class = "col-sm-2">
                Mô tả loại phòng
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.category_desc)
            </dd>
            <dt class = "col-sm-2">
                Trạng thái loại phòng
            </dt>
            @if (Model.category_status == 0)
            {
                <dd class = "col-sm-10">
                    Ẩn
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    Hiện
                </dd>
            }
        </dl>
                <input type="hidden" asp-for="category_id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
    </form>
    <a asp-action="Index">Quay lại</a>
</div>

@model HotelBooking.Models.CategoryRoom

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
    ViewBag.Title = "Thêm loại phòng mới";
}


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Thêm danh mục loại phòng
            </header>
            <div class="panel-body">
                <div class="position-center">
                    <form asp-action="Create">
                        <div class="form-group">
                            <label asp-for="category_name" class="control-label">Loại phòng</label>
                            <input asp-for="category_name" class="form-control" />
                            <span asp-validation-for="category_name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="category_desc" class="control-label">Mô tả loại phòng</label>
                            <textarea style="resize: none" rows="8" asp-for="category_desc" class="form-control"></textarea>
                            <span asp-validation-for="category_desc" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="category_status">Trạng thái</label>
                            <select asp-for="category_status" class="form-control input-sm m-bot15">
                                <option asp-for="category_status" value="0">Hiển thị</option>
                                <option asp-for="category_status" value="1">Ẩn</option>
                            </select>
                        </div>

                        <button type="submit" asp-action="Create" class="btn btn-info">Thêm danh mục</button>
                    </form>
                </div>

            </div>
        </section>
    </div>

</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

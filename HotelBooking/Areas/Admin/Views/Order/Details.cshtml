@model HotelBooking.Models.OrderDetails

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
    ViewBag.Title = "Chi tiết đơn đặt phòng";
}

<h1>Chi tiết đơn đặt phòng - @Model.order_id</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Tên phòng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.room_name)
        </dd>
        <dt class="col-sm-2">
            Giá phòng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.room_price)
        </dd>
        <dt class="col-sm-2">
            Ngày check-in
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.checkin)
        </dd>
        <dt class="col-sm-2">
            Ngày check-out
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.checkout)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Quay lại</a>
</div>
